library
    exposed-modules:
        Instant.Jvm.Transpiler
        Instant.Llvm.Transpiler
        Instant.Grammar.ErrM

    -- Modules included in this library but not exported.
    other-modules:
        Instant.Common
        Instant.Grammar.AbsInstant
        Instant.Grammar.LexInstant
        Instant.Grammar.PrintInstant
        Instant.Grammar.ParInstant
        Instant.Jvm.Instructions
        Instant.Llvm.Instructions

    -- LANGUAGE extensions used by modules in this package.
    other-extensions:
        FlexibleInstances
        DeriveTraversable
        GeneralizedNewtypeDeriving
        LambdaCase
        PatternSynonyms
        TypeFamilies

    build-depends:
        base ^>=4.15.1.0,
        array ^>=0.5.4.0,
        mtl ^>=2.2.2,
        containers ^>=0.6.4.1,
        text ^>=1.2.5.0

    hs-source-dirs:   src
    default-language: Haskell2010
    ghc-options:
        -Wall

executable insc_jvm
    main-is:          Jvm.hs

    other-modules:
        Common

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    build-depends:
        Instant,
        base ^>=4.15.1.0,
        text ^>=1.2.5.0,
        filepath ^>=1.4.2.1,
        directory ^>=1.3.6.2,
        process ^>=1.6.13.2

    hs-source-dirs:   app
    default-language: Haskell2010
    ghc-options:
        -Wall

executable insc_llvm
    main-is:          Llvm.hs

    other-modules:
        Common

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    build-depends:
        Instant,
        base ^>=4.15.1.0,
        text ^>=1.2.5.0,
        filepath ^>=1.4.2.1,
        directory ^>=1.3.6.2,
        process ^>=1.6.13.2

    hs-source-dirs:   app
    default-language: Haskell2010
    ghc-options:
        -Wall
